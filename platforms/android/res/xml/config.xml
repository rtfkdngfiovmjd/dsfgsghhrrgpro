<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fluxsoftwares.adxpro" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <allow-intent href="market:*" />
    <name>ADX Pro</name>
    <description>
        Sistema de Gestão Acadêmico Rede de Ensino Doctum - Aplicativo do Professor.
    </description>
    <author email="fluxsoftwares@gmail.com" href="http://www.fluxsoftwares.com.br/">
        Flux Softwares
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/res/img/icon.png" />
</widget>
