<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fluxsoftwares.adxpro" version="1.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ADX Pro</name>
    <description>
        Sistema de Gestão Acadêmico Rede de Ensino Doctum - Aplicativo do Professor.
    </description>
    <author email="fluxsoftwares@gmail.com" href="http://www.fluxsoftwares.com.br/">
        Flux Softwares
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^4.0.2" />

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <icon src="www/res/img/icon.png" />

</widget>
